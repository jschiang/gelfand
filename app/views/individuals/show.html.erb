
<div class="row" data-equalizer>
    <div class="small-2 columns leftNav" data-equalizer-watch>
        <%= render "sidebar" %>
    </div>
    <div class="small-10 columns rightContent" data-equalizer-watch>
        
        <p id="notice"><%= notice %></p>
        <h1>Account Information</h1>
    
        <div class="indiv_show_OuterDiv">
            <div class="row">
                <div class="small-10 columns">
                    <div class="indiv_show_SpecificCell">
                      <strong>First Name: </strong>
                      <%= @individual.f_name %>
                    </div>

                    <div class="indiv_show_SpecificCell">
                      <strong>Last Name: </strong>
                      <%= @individual.l_name %>
                    </div>

                    <div class="indiv_show_SpecificCell">
                      <strong>Preferred Name: </strong>
                      ?
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="small-10 columns">
                    <div class="indiv_show_SpecificCell">
                        <strong>Email: </strong>
                        <%= @individual.user.email%>
                    </div>

                    <div class="indiv_show_Contact">
                    <strong>Contact:</strong><br>
                        5000 Forbes Avenue <br> Pittsburgh, PA 15289<br>
                        -- This is a test address --

                    </div>
                </div>
            </div>



            

        </div>

    

        <% if current_user && current_user.member%>
            <% unless @individual.bg_check.nil? %>
                <%= link_to 'My Background Check', bg_check_path(@individual.bg_check.id), :class => "button" %>
            <%else%>
                <%= link_to 'Start Background Check', new_bg_check_path(:individual_id => @individual.id), :class => "button" %>
            <%end%>

        <% end %>
    </div>

</div>
